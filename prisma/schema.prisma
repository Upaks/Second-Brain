generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [pgvector(map: "vector")]
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  password      String
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  insights      Insight[]
  tags          Tag[]
  reminders     Reminder[]
  files         File[]
  ingestItems   IngestItem[]
  collections   Collection[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model IngestItem {
  id            String        @id @default(cuid())
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          IngestType
  source        String?
  mime          String?
  rawText       String?       @db.Text
  status        IngestStatus  @default(PENDING)
  meta          Json?
  createdAt     DateTime      @default(now())
  processedAt   DateTime?
  insight       Insight?
  
  @@index([userId, status])
  @@index([createdAt])
}

enum IngestType {
  TEXT
  URL
  PDF
  IMAGE
  AUDIO
}

enum IngestStatus {
  PENDING
  PROCESSING
  DONE
  ERROR
}

model Insight {
  id              String                @id @default(cuid())
  userId          String
  user            User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  title           String
  summary         String                @db.Text
  takeaway        String
  content         String?               @db.Text
  embedding       Unsupported("vector(1536)")?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  ingestItemId    String?               @unique
  ingestItem      IngestItem?           @relation(fields: [ingestItemId], references: [id])
  tags            InsightTag[]
  linksFrom       InsightLink[]         @relation("links_from")
  linksTo         InsightLink[]         @relation("links_to")
  reminders       Reminder[]
  files           File[]
  collections     CollectionOnInsight[]
  
  @@index([userId, createdAt])
  @@index([title])
}

model Tag {
  id        String       @id @default(cuid())
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  color     String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  insights  InsightTag[]
  
  @@unique([userId, name])
  @@index([userId])
}

model InsightTag {
  insightId String
  tagId     String
  insight   Insight @relation(fields: [insightId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@id([insightId, tagId])
}

model InsightLink {
  id        String   @id @default(cuid())
  fromId    String
  toId      String
  strength  Float
  rationale String?
  createdAt DateTime @default(now())
  from      Insight  @relation("links_from", fields: [fromId], references: [id], onDelete: Cascade)
  to        Insight  @relation("links_to", fields: [toId], references: [id], onDelete: Cascade)
  
  @@unique([fromId, toId])
}

model Reminder {
  id        String       @id @default(cuid())
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  insightId String?
  insight   Insight?     @relation(fields: [insightId], references: [id], onDelete: Cascade)
  dueAt     DateTime
  kind      ReminderKind
  note      String?
  sentAt    DateTime?
  createdAt DateTime     @default(now())
  
  @@index([userId, dueAt])
  @@index([dueAt, sentAt])
}

enum ReminderKind {
  TIME
  MANUAL_CONTEXT
}

model File {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  insightId String?
  insight   Insight? @relation(fields: [insightId], references: [id], onDelete: Cascade)
  key       String
  name      String
  size      Int
  mime      String
  createdAt DateTime @default(now())
  
  @@index([userId])
}

model Collection {
  id        String                @id @default(cuid())
  userId    String
  user      User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  description String?
  color     String?
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  insights  CollectionOnInsight[]
  
  @@unique([userId, name])
  @@index([userId])
}

model CollectionOnInsight {
  collectionId String
  insightId    String
  addedAt      DateTime   @default(now())
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  insight      Insight    @relation(fields: [insightId], references: [id], onDelete: Cascade)
  
  @@id([collectionId, insightId])
}
