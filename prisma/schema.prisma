generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_DATABASE_URL")
  extensions = [uuid_ossp(map: "uuid-ossp", schema: "extensions"), vector]
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  password      String
  name          String?
  image         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  emailVerified DateTime?
  accounts      Account[]
  collections   Collection[]
  files         File[]
  ingestItems   IngestItem[]
  insights      Insight[]
  reminders     Reminder[]
  sessions      Session[]
  tags          Tag[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model IngestItem {
  id          String       @id @default(cuid())
  userId      String
  type        IngestType
  source      String?
  mime        String?
  rawText     String?
  status      IngestStatus @default(PENDING)
  meta        Json?
  createdAt   DateTime     @default(now())
  processedAt DateTime?
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  insights    Insight[]    @relation("ingest_item_insights")

  @@index([userId, status])
  @@index([createdAt])
}

model Insight {
  id           String                 @id @default(cuid())
  userId       String
  title        String
  summary      String
  takeaway     String
  content      String?
  embedding    Unsupported("vector")?
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt
  ingestItemId String?
  sectionIndex Int?
  sectionLabel String?
  collections  CollectionOnInsight[]
  files        File[]
  ingestItem   IngestItem?            @relation("ingest_item_insights", fields: [ingestItemId], references: [id])
  user         User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  linksFrom    InsightLink[]          @relation("links_from")
  linksTo      InsightLink[]          @relation("links_to")
  tags         InsightTag[]
  reminders    Reminder[]

  @@index([userId, createdAt])
  @@index([title])
  @@index([ingestItemId, sectionIndex])
}

model Tag {
  id        String       @id @default(cuid())
  userId    String
  name      String
  color     String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  insights  InsightTag[]
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId])
}

model InsightTag {
  insightId String
  tagId     String
  insight   Insight @relation(fields: [insightId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([insightId, tagId])
}

model InsightLink {
  id        String   @id @default(cuid())
  fromId    String
  toId      String
  strength  Float
  rationale String?
  createdAt DateTime @default(now())
  from      Insight  @relation("links_from", fields: [fromId], references: [id], onDelete: Cascade)
  to        Insight  @relation("links_to", fields: [toId], references: [id], onDelete: Cascade)

  @@unique([fromId, toId])
}

model Reminder {
  id        String       @id @default(cuid())
  userId    String
  insightId String?
  dueAt     DateTime
  kind      ReminderKind
  note      String?
  sentAt    DateTime?
  createdAt DateTime     @default(now())
  insight   Insight?     @relation(fields: [insightId], references: [id], onDelete: Cascade)
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, dueAt])
  @@index([dueAt, sentAt])
}

model File {
  id        String   @id @default(cuid())
  userId    String
  insightId String?
  key       String
  name      String
  size      Int
  mime      String
  createdAt DateTime @default(now())
  insight   Insight? @relation(fields: [insightId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Collection {
  id          String                @id @default(cuid())
  userId      String
  name        String
  description String?
  color       String?
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  user        User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  insights    CollectionOnInsight[]

  @@unique([userId, name])
  @@index([userId])
}

model CollectionOnInsight {
  collectionId String
  insightId    String
  addedAt      DateTime   @default(now())
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  insight      Insight    @relation(fields: [insightId], references: [id], onDelete: Cascade)

  @@id([collectionId, insightId])
}

enum IngestType {
  TEXT
  URL
  PDF
  IMAGE
  AUDIO
}

enum IngestStatus {
  PENDING
  PROCESSING
  DONE
  ERROR
}

enum ReminderKind {
  TIME
  MANUAL_CONTEXT
}
